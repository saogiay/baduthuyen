
RewriteEngine On

# Handle Authorization Header
RewriteCond %{HTTP:Authorization} .
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# Redirect Trailing Slashes If Not A Folder...
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [L,R=301]

# Handle Front Controller...
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|gif|txt|webp|svg|min\.css|eot|woff|ttf|ico)$ [NC]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.php [L]

# Handle Static Assets
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(css|js|images|storage|font-awesome)/(.*)$ public/$1/$2 [L,NC]

# Disable Directory Listing
Options -Indexes

# Custom Error Pages
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php
ErrorDocument 500 /index.php

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Protect Sensitive Files
<FilesMatch "^(\.env|composer\.json|config)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# LiteSpeed Cache Settings
<IfModule LiteSpeed>
    RewriteEngine on
    CacheLookup on
    RewriteRule ^(css|js|images|storage|font-awesome)/(.*)$ - [E=cache-control:max-age=31536000]
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"

    # Documents
    ExpiresByType application/pdf "access plus 1 year"

    # Images
    ExpiresByType image/(x-icon|vnd.microsoft.icon|svg+xml|jpg|jpeg|png|gif|webp) "access plus 1 year"

    # Media
    ExpiresByType (video|audio)/ogg "access plus 1 year"
    ExpiresByType video/(mp4|webm) "access plus 1 year"

    # CSS, JavaScript
    ExpiresByType text/(css|javascript) "access plus 1 year"
    ExpiresByType application/(javascript|x-javascript) "access plus 1 year"

    # Fonts
    ExpiresByType application/(x-font-ttf|x-font-woff|font-woff|font-woff2|vnd.ms-fontobject) "access plus 1 year"
    ExpiresByType font/(ttf|otf|woff|woff2) "access plus 1 year"
</IfModule>

# GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/x-httpd-php application/x-font-ttf application/x-font-woff
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Remove browser bugs
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>